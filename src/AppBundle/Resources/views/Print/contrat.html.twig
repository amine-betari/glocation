<html>
    <head>
         {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/pdf.css') }}">
            <base href="http://{{app.request.host}}">
            <meta charset="UTF-8" >
			 <style>
				 table.header,table.accroche{border:none}
				 table.body{width:100%;border-top: 1px #000 solid; border-bottom: none;border-right:none;border-left:none}
				 table.body td:first-child{border-right: 1px #000 solid;}table.body td{width: 50%}
				 .padding-left{padding-left:15px}
				  p,span {font-size:12px;line-height: 8px}p.title{font-size:16px;line-height: 10px}
				 .margin-left{margin-left: 90px}
				 table.facture{border-collapse: collapse;}table.facture,.facture td{ border: 1px solid black;font-size:10px}
				 .facture td:first-child{width:10%!important;}
				 .facture td:nth-child(2){width:10%!important;}
				 .facture td:nth-child(3){width:10%!important;}
				 .facture td:nth-child(4){width:20%!important;}
				 .facture td:nth-child(5){width:25%!important;}
				 .facture td:nth-child(6){width:25%!important;}
				 .facture td{padding:5px;font-weight:200;}

			 </style>
        {% endblock %}
    </head>
    <body>
        {% block header %}
			<table class="header">
				<tr>
					<td>

					</td>
					<td>
						<div class="span2">
							<img src="{{ asset('/bundles/app/img/logo-car.png') }}">
						</div>
					</td>
				</tr>
			</table>

        {% endblock %}
 
        {% block content %}
			<table width="100%" class="accroche">
				<thead> <!-- En-tête du tableau -->
				   <tr>
					   <th>	<h3>Contrat de location : {{ contrat.numContrat }} </h3> </th>
					   <th>	<h4>Oujda, le {{ contrat.dateCreated|date() }}</h4> </th>
				   </tr>
			   </thead>
			</table>
			<table class="body">
				<tr>
					<td>
						<center>
							<p class="title">LOCATAIRE</p>
							<span>Nom et prénom ou Raison Sociale</span>
						</center>
						<p>{{ contrat.locataire.nom }}</p>
						<p>{{ contrat.locataire.prenom }}</p>
						<p>{{ contrat.locataire.raisonSociale }}</p>
						<hr>
						<p>Adresse au Maroc: {{ contrat.locataire.adresseMaroc }}</p>
						<hr>
						<p>Adresse à l'étranger: {{ contrat.locataire.adresseEtranger }}</p>
						<hr>
						<p>Nationalité: {{ contrat.locataire.nationalite }}</p>
						<hr>
						<p>Tél: {{ contrat.locataire.phone }}</p>
						<hr>
							<p>
								CIN N°: {{ contrat.locataire.cIN }}
								<span class="margin-left">Délivré le : {{ contrat.locataire.delivrance|date('d-m-Y') }}</span>
							</p>
							<p>Passeport N°: {{ contrat.locataire.numPasseport }} </p>
							<p>Profession: {{ contrat.locataire.profession }} </p>
							<p>Permis de conduite: {{ contrat.locataire.permis }} </p>
						<hr>
						<center>
							<p class="title">Deuxième Chauffeur</p>
						</center>
						<p>Nom, prénom: {{ contrat.nomSecond }} </p>
						<p>CIN: {{ contrat.cinSecond }} </p>
						<p>Permis de conduite: {{ contrat.permisSecond }} </p>
						<hr>
						<p class="title">Facture</p>
						<table class="facture">
								<tr>
									<td>Nombre</td>
									<td>Jour</td>
									<td>Mois</td>
									<td>Heures supplém</td>
									<td>Prix unit</td>
									<td>Total T.T.C</td>
								</tr>
								<tr> <td></td><td></td><td></td><td></td><td></td><td></td></tr>
								<tr> <td></td><td></td><td></td><td></td><td></td><td></td></tr>

						</table>
						<br/>

						<p> Frais de remise:</p>
						<p> Lieu:</p>
						<p> Carburant:</p>
						<p> Diverses:</p>
						<p> Kilométrage:</p>

						<br/>
						<p class="margin-left"> Total TTC à payer: {{  contrat.totalTccApayer  }}</p>



					</td>
					<td>
						<center>
							<p class="title">VEHICULE</p>
						</center>
						<div class="padding-left">
							<p> Marque: {{ contrat.vehicule.marque }}</p>
							<p> N de matricule: {{ contrat.vehicule.matricule }}</p>
							<p> Carburant: {{ contrat.vehicule.carburant }}</p>
						</div>
						<hr>
						<center>
							<p class="title">Equipement et Accessoires</p>
						</center>
						<div class="padding-left">
							{% for eq in contrat.vehicule.equipements %}
								<p>{{ eq.nom }}</p>
							{% endfor %}
						</div>

					</td>
				</tr>

			</table>
					





        {% endblock %}
 
    </body>
</html>